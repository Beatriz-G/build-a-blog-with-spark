{{#partial "title"}}Edit{{/partial}}

{{#partial "content"}}
    <section>
        <div class="container">
            <div class="edit-entry">
                <h2>Edit Entry</h2>
                <form method="post" action="/entries/{{blogDetails.slug}}/edit">
                    <label for="title"> Title</label>
                    <input type="text" name="title" id="title" value="{{blogDetails.title}}"><br>
                    <label for="entry">Entry</label>
                    <textarea rows="5" name="content" id="content" {{blogDetails.content}}></textarea>
                    <input type="submit" value="Save Entry" class="button">
                    <a href="/entries/" {{blogDetails.slug}} class="button button-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </section>
{{/partial}}

{{> base.hbs}}